{
    "name": "@imperia/discord-bot",
    "version": "0.0.0",
    "private": true,
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "build": "bun --env-file ../../.env tsup --format esm",
        "start": "bun --env-file ../../.env .",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@imperia/database": "workspace:*",
        "@imperia/environment": "workspace:*",
        "@imperia/logger": "workspace:*",
        "@imperia/stores": "workspace:*",
        "@sapphire/discord.js-utilities": "^7.3.0",
        "@sapphire/fetch": "^3.0.3",
        "@sapphire/framework": "^5.2.1",
        "@sapphire/pieces": "^4.3.1",
        "@sapphire/plugin-i18next": "^7.1.2",
        "@sapphire/plugin-scheduled-tasks": "^10.0.1",
        "@sapphire/plugin-subcommands": "^7.0.0",
        "@sapphire/time-utilities": "^1.7.12",
        "@sapphire/utilities": "^3.17.0",
        "chrono-node": "^1.4.9",
        "dayjs": "^1.11.13",
        "discord.js": "^14.16.2"
    },
    "devDependencies": {
        "@imperia/typescript": "workspace:*",
        "@types/bun": "latest",
        "@types/node": "latest",
        "tsup": "^8.2.4",
        "typescript": "^5"
    },
    "imports": {
        "#lib/*": "./src/lib/*.ts",
        "#services/*": "./src/services/*.ts",
        "#utilities/*": "./src/utilities/*.ts"
    }
}
